<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Hyva\Checkout\Model\Magewire\Payment\PlaceOrderServiceProvider">
        <arguments>
            <argument name="placeOrderServiceList" xsi:type="array">
                <!-- Gateways -->
                <item name="two_payment" xsi:type="object">Two\GatewayHyva\Model\Magewire\Payment\PlaceOrderService</item>
            </argument>
        </arguments>
    </type>
    <type name="Hyva\Checkout\Model\MethodMetaData">
        <plugin name="MethodMetaData::renderIcon" type="Two\GatewayHyva\Plugin\MethodMetaDataPlugin" sortOrder="100"/>
    </type>
    <!-- Position Company field after Country selector -->
    <type name="Hyva\Checkout\Model\Form\EntityForm\EavAttributeShippingAddressForm">
        <arguments>
            <argument name="entityFormModifiers" xsi:type="array">
                <item name="two_company_sort_order" sortOrder="510" xsi:type="object">Two\GatewayHyva\Model\Form\EntityFormModifier\CompanySortOrderModifier</item>
            </argument>
        </arguments>
    </type>
    <type name="Hyva\Checkout\Model\Form\EntityForm\EavAttributeBillingAddressForm">
        <arguments>
            <argument name="entityFormModifiers" xsi:type="array">
                <item name="two_company_sort_order" sortOrder="510" xsi:type="object">Two\GatewayHyva\Model\Form\EntityFormModifier\CompanySortOrderModifier</item>
            </argument>
        </arguments>
    </type>
</config>
