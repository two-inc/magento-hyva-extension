<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.additional">
            <block name="checkout-shipping-address-company-search" 
                ifconfig="payment/abn_payment/active" 
                template="ABN_GatewayHyva::component/payment/method/abn_shipping_company.phtml" after="-"/>
        </referenceBlock>
        <referenceBlock name="checkout.payment.methods">
            <block name="checkout.payment.method.two-payment-method" as="abn_payment" ifconfig="payment/abn_payment/active" template="ABN_GatewayHyva::component/payment/method/abn_gateway_method.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        ABN\GatewayHyva\Magewire\Checkout\Payment\AbnGateWayMethod
                    </argument>
                    <argument name="method_code" xsi:type="string">abn_payment</argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="icon" xsi:type="array">
                            <item name="src" xsi:type="string">ABN_GatewayHyva::images/cc/abnLogo.svg</item>
                            <!-- optional attributes, specify as needed -->
                            <item name="attributes" xsi:type="array">
                                <item name="width" xsi:type="number">32</item>
                                <item name="height" xsi:type="number">32</item>
                            </item>
                        </item>
                        <item name="additional_icon_provider" xsi:type="array">
                            <item name="template" xsi:type="string">
                                ABN_GatewayHyva::component/tooltip.phtml
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>